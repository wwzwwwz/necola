<resources>


    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->


    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/material_dynamic_primary99</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
    <color name="toolbarIconColor">@color/design_default_color_primary</color>
    <style name="Widget_Toolbar" >
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.DynamicColors.DayNight</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
    </style>
    <style name="TextAppearance_Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget_Backdrop" parent="">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>